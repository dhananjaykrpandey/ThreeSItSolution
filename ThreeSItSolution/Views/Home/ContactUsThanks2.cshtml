        </div>
        <div class="row wow fadeInUp">

        </div>
        <div class="row wow fadeInUp">

        </div>
        <div class="row wow fadeInUp">
            <div class="col-lg-6 info">
                <h3>Kingdom of Eswatini Address <img src="~/img/swaziland-flag-icon-64.png" alt="" class="img-fluid" /></h3>
                <i class="ion-ios-location-outline"></i>
                <p class="description">
                    3S ESWATINI IT SERVICES (PTY) LTD
                    Marvi 2, Next to Golf Course Flats,
                    Mantsholo Street, Mbabane
                    HHOHHO Region, Kingdom of Eswatini
                </p>
                <i class="ion-ios-email-outline"></i>
                <p>info@3s-itsolutions.co.za</p>
                <i class="ion-ios-telephone-outline"></i>
                <p>+268-24042891</p>
                <i class="ion-android-phone-portrait "></i>
                <p>+268-76157250</p>
                <i class="ion-ios-world-outline"></i>
                <p> www.3s-itsolutions.co.za/eswatini</p>
                <p><button class="btn btn-outline-success text-primary"><i class="ion-chatbubble"></i> &nbsp; &nbsp; Chat Now</button></p>
            </div>
            <div class="col-lg-6">
                <div class="map mb-4 mb-lg-0">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" style="border:0; width: 100%; height: 312px;" allowfullscreen></iframe>
                </div>
            </div>

        </div>
        <div class="row wow fadeInUp">

        </div>
        <div class="row wow fadeInUp justify-content-lg-center">
            <div class="col-lg-8 col-md-8 col-sm-8">


                <div class="form">
                    <div id="sendmessage">Your message has been sent. Thank you!</div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @Html.AntiForgeryToken()
                    <form action="" method="post" role="form" class="contactForm">
                        <div class="form-row">
                            <div class="form-group col-lg-6">
                                <input type="text" asp-for="CName" name="CName" class="form-control" id="name" placeholder="Your Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                                <span asp-validation-for="CName" class="text-danger"></span>
                                <div class="validation"></div>
                            </div>
                            <div class="form-group col-lg-6">
                                <input type="email" asp-for="CEmailId" class="form-control" name="CEmailId" id="email" placeholder="Your Email" data-rule="email" data-msg="Please enter a valid email" />
                                <span asp-validation-for="CEmailId" class="text-danger"></span>
                                <div class="validation"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="CSubject" class="form-control" name="CSubject" id="subject" placeholder="Subject" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject" />
                            <span asp-validation-for="CSubject" class="text-danger"></span>
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" asp-for="CMessage" name="CMessage" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"></textarea>
                            <span asp-validation-for="CMessage" class="text-danger"></span>
                            <div class="validation"></div>
                        </div>
                        <div class="text-center"><button type="submit" title="Send Message">Send Message</button></div>
                    </form>
                </div>
            </div>

        </div>

    </div>
</section>
@if (ViewBag.TheResult == true)
{
    <div class="alert alert-success">
        <strong>Thank you!</strong> Your query has been submitted.
    </div>
}