        </div>
        <div class="row wow fadeInUp">

        </div>
        <div class="row wow fadeInUp justify-content-lg-center">
            <div class="col-lg-8 col-md-8 col-sm-8">


                <div class="form">
                    <div id="sendmessage">Your message has been sent. Thank you!</div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @Html.AntiForgeryToken()
                    <form action="" method="post" role="form" class="contactForm" autocomplete="off">
                        <div class="form-row">
                            <div class="form-group col-lg-6">
                                <input type="text" asp-for="CName" name="CName" class="form-control" id="name" placeholder="Your Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                                <span asp-validation-for="CName" class="text-danger"></span>
                                <div class="validation"></div>
                            </div>
                            <div class="form-group col-lg-6">
                                <input type="email" asp-for="CEmailId" class="form-control" name="CEmailId" id="email" placeholder="Your Email" data-rule="email" data-msg="Please enter a valid email" />
                                <span asp-validation-for="CEmailId" class="text-danger"></span>
                                <div class="validation"></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" asp-for="CSubject" class="form-control" name="CSubject" id="subject" placeholder="Subject" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject" />
                            <span asp-validation-for="CSubject" class="text-danger"></span>
                            <div class="validation"></div>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" asp-for="CMessage" name="CMessage" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"></textarea>
                            <span asp-validation-for="CMessage" class="text-danger"></span>
                            <div class="validation"></div>
                        </div>
                        <div class="text-center"><button type="submit" title="Send Message" data-toggle="modal" data-target="#myModal">Send Message</button></div>
                    </form>
                </div>
            </div>

        </div>

    </div>
</section>    
<div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <img src="..." class="rounded mr-2" alt="...">
        <strong class="mr-auto">Bootstrap</strong>
        <small class="text-muted">11 mins ago</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        Hello, world! This is a toast message.
    </div>
</div>
