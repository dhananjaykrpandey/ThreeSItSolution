@model ThreeSItSolution.Models.MEnquiry

@{
    ViewData["Title"] = "3S IT Training and Business Solutions Course Enquiry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section id="contact">
    <div class="container-fluid">

        @if (TempData["Success"] != null)
        {

        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <h2 class="alert-heading">@ViewData["Title"]</h2>
            <p> @TempData["Success"]</p>
            <hr>
           
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>

        }

        <div class="section-header">
            <h3>@ViewData["Title"]</h3>
        </div>
        <div class="row justify-content-lg-center">
            <div class="col-lg-6 col-md-6 col-sm-6">

                <div class="form">
                    <div id="sendmessage">Your message has been sent. Thank you!</div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @Html.AntiForgeryToken()
                    <form asp-action="Index" autocomplete="off" spellcheck="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group row">
                            <label asp-for="cFullName" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="cFullName" class="form-control" placeholder="Full Name" />
                                <span asp-validation-for="cFullName" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="form-group row">
                            <label asp-for="cAddress" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-8">
                                <textarea type="text" asp-for="cAddress" class="form-control" placeholder="Address"></textarea>
                                <span asp-validation-for="cAddress" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label asp-for="cMobileNo" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-5">
                                <input asp-for="cMobileNo" class="form-control" placeholder="Mobile No." />
                                <span asp-validation-for="cMobileNo" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label asp-for="cPhoneNo" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-5">
                                <input asp-for="cPhoneNo" class="form-control" placeholder="Telephone No." />
                                <span asp-validation-for="cPhoneNo" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="form-group row">
                            <label asp-for="cEmailId" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-6">
                                <input type="email" asp-for="cEmailId" class="form-control" placeholder="Email - Id (example@example.com)" />
                                <span asp-validation-for="cEmailId" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label asp-for="dDob" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-5">
                                <input type="date" asp-for="dDob" class="form-control" placeholder="Date of Birth" />
                                <span asp-validation-for="dDob" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label asp-for="cGenger" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-4">
                                <select class="form-control" id="sel1" asp-for="cGenger">
                                    <option value="M">Male</option>
                                    <option value="F">Female</option>
                                </select>

                                <span asp-validation-for="cGenger" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="form-group row">
                            <label asp-for="cGuradian" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="cGuradian" class="form-control" placeholder="Guardian's Or Sponsor's Name" />
                                <span asp-validation-for="cGuradian" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="form-group row">
                            <label asp-for="cCompnay" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="cCompnay" class="form-control" placeholder="Compnay Name">
                                <span asp-validation-for="cCompnay" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="form-group row">
                            <label asp-for="cAcademic" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-8">
                                <select class="form-control" name="ddAcademic" id="ddAcademic">
                                    <option>-Select Academic Qualification-</option>
                                    <option>Form IV or Less</option>
                                    <option>Form VI</option>
                                    <option>Diploma / Vendor Certifications (MCSE etc)</option>
                                    <option>Graduation</option>
                                    <option>Post Graduation</option>
                                    <option>Other (please specify):</option>
                                </select>
                                <br />
                                <input asp-for="cAcademic" name="cAcademic" id="cAcademic" class="form-control" placeholder="Academic Background" readonly />
                                <span asp-validation-for="cAcademic" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label asp-for="cCareerBackground" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-8">
                                <select class="form-control" name="ddCareerBackground" id="ddCareerBackground">
                                    <option>-Select Career Background-</option>
                                    <option>Computer Science</option>
                                    <option>Commerce</option>
                                    <option>Arts</option>
                                    <option>Engineering</option>
                                    <option>Management</option>
                                    <option>Other (please specify):</option>
                                </select>
                                <br />
                                <input asp-for="cCareerBackground" name="cCareerBackground" id="cCareerBackground" class="form-control" placeholder="Career BackGround" readonly />
                                <span asp-validation-for="cCareerBackground" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label asp-for="cCurrentOccupation" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="cCurrentOccupation" class="form-control" placeholder="Current Occupation" />
                                <span asp-validation-for="cCurrentOccupation" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="form-group row">
                            <label asp-for="cSchaool" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-8">
                                <input asp-for="cSchaool" class="form-control" placeholder="Current Or Last Attended School/College" />
                                <span asp-validation-for="cSchaool" class="text-danger"></span>
                            </div>
                        </div>



                        <div class="form-group row">
                            <label asp-for="cReason" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-8">
                                <select class="form-control" name="ddReason" id="ddReason">
                                    <option>-Reason To Pursue Our Computer Course(s)-</option>
                                    <option>To build a career in computers</option>
                                    <option>Seeking additional qualifications in order to improve job prospects</option>
                                    <option>To help get college/university placement abroad</option>
                                    <option>To use skills in own business or current studies</option>
                                    <option>To use skills in present job</option>
                                    <option>General awareness</option>
                                    <option>Other (please specify):</option>
                                </select>
                                <br />
                                <textarea asp-for="cReason" class="form-control" placeholder="Reason To Pursue Our Computer Course(s)" rows="5" readonly></textarea>
                                <span asp-validation-for="cReason" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label asp-for="cSourceOfInfo" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-8">
                                <select class="form-control" name="ddSourceOfInfo" id="ddSourceOfInfo">
                                    <option>-Select Source Of Information-</option>
                                    <option>Newspaper Advertisement</option>
                                    <option>Email / TV Advertisement</option>
                                    <option>Hand-out/Flayer Advertisement</option>
                                    <option>Presentation At 3S IT TRAINING Center, EDENVALE, Johannesburg   </option>
                                    <option>Other (please specify):</option>
                                </select>
                                <br />
                                <textarea asp-for="cSourceOfInfo" class="form-control" placeholder="Source Of Information Regarding 3S IT Training Programs?" readonly></textarea>
                                <span asp-validation-for="cSourceOfInfo" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="form-group row">
                            <label asp-for="cRemakrs" class="col-sm-3 col-form-label"></label>
                            <div class="col-sm-8">
                                <textarea asp-for="cRemakrs" class="form-control" placeholder="Remarks If Any" rows="5"></textarea>
                                <span asp-validation-for="cRemakrs" class="text-danger"></span>
                            </div>
                        </div>

                        <br />

                        <div class="form-group row">
                            <div class="col-sm-5">
                            </div>
                            <div class="col-sm-6">
                                <button type="submit" value="Submit" class="btn btn-outline-primary btn-lg"><i class="fa fa-check-circle"></i> Submit</button>
                                <button type="reset" value="Reset" class="btn btn-outline-danger btn-lg"><i class="fa fa-undo"></i> Reset</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</section>
<script type="text/javascript">
    var txtcAcademic = document.getElementById('cAcademic');
    var ddcAcademic = document.getElementById('ddAcademic');

    ddcAcademic.onchange = function () {
        if (this.value == "Others" || this.value == "-Select Academic Qualification-") { txtcAcademic.readOnly = false; txtcAcademic.value = '' } else { txtcAcademic.readOnly = true; txtcAcademic.value = this.value; }

        txtcAcademic.readonly = txtcAcademic.readOnly;
    }

    var txtCareerBackground = document.getElementById('cCareerBackground');
    var ddCareerBackground = document.getElementById('ddCareerBackground');

    ddCareerBackground.onchange = function () {
        if (this.value == "Others" || this.value == "-Select Career Background-") { txtCareerBackground.readOnly = false; txtCareerBackground.value = '' } else { txtCareerBackground.readOnly = true; txtCareerBackground.value = this.value; }

        txtCareerBackground.readonly = txtCareerBackground.readOnly;
    }

    var txtReason = document.getElementById('cReason');
    var ddReason = document.getElementById('ddReason');

    ddReason.onchange = function () {
        if (this.value == "Others" || this.value == "-Reason To Pursue Our Computer Course(s)-") { txtReason.readOnly = false; txtReason.value = '' } else { txtReason.readOnly = true; txtReason.value = this.value; }

        txtReason.readonly = txtReason.readOnly;
    }

    var txtSourceOfInfo = document.getElementById('cSourceOfInfo');
    var ddSourceOfInfo = document.getElementById('ddSourceOfInfo');

    ddSourceOfInfo.onchange = function () {
        if (this.value == "Others" || this.value == "-Select Source Of Information-") { txtSourceOfInfo.readOnly = false; txtSourceOfInfo.value = '' } else { txtSourceOfInfo.readOnly = true; txtSourceOfInfo.value = this.value; }

        txtSourceOfInfo.readonly = txtSourceOfInfo.readOnly;
    }

</script>